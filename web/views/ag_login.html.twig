{% extends 'ag_base/base.html.twig' %}

{% block html_params %}{% endblock %}

{% block stylesheets %}
<!-- bootstrap 3.0.2 -->
<link href="{{ app.asset_path }}/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<!-- font Awesome -->
<link href="{{ app.asset_path }}/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
<!-- Theme style -->
<link href="{{ app.asset_path }}/css/AdminLTE.css" rel="stylesheet" type="text/css" />

<link href="{{ app.asset_path }}/css/custom/login.css" rel="stylesheet" type="text/css" />

<link href="{{ app.asset_path }}/css/iCheck/square/square.css" rel="stylesheet">

<!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
      <![endif]-->

      {% endblock %}

      {% block body_params %}{% endblock %}

      {% block container %}
      <div class="login-wrapper">



       <div class="container-fluid logincont">
        <div class="textinfo">
          <h1>Silex Skeleton</h1>
          <p class="small">Version 0.9 :: Beta 2 - Copyright Â© 2014-2015 Fritz Hoste.</p>
        </div>
        <div class="col-sm-6 hidden-xs"></div>

        <div class="col-sm-4 col-sm-offset-2 logonbox">
          <div class="row bgwhite logonbox" >
            <div class="col-sm-8 col-sm-offset-2 loginform">

              <div class="header">
                <h1>SiSkel</h1>
                <p class="lead">Log in met je Silex Account</p>
              </div>

              {% if error %}
              <div class="callout callout-danger">
                <h4>Helaas! Er is iets fout gegaan</h4>
                <p class="text-danger">{{ error|trans }}</p>
              </div>

              {% endif %}   
              <form action="{{ app.login_check }}" method="post">
                <div class="body">
                  <div class="form-group">
                    <input type="text" name="_username" class="form-control" value="{{ last_username }}" placeholder="Gebruikersnaam"/>
                  </div>
                  <div class="form-group">
                    <input type="password" name="_password" class="form-control" placeholder="Wachtwoord"/>
                  </div>          
                  <p class="help-block text-right"><a href="#">Hulp bij het inloggen?</a></p>
                  <div class="form-group" style="color:#555">
                  <input type="checkbox"id="remember_me" name="_remember_me"/> Onthoud mij

                  </div>
                </div>
                <div class="footer">          

                  <button type="submit" class="btn bg-oleon btn-flat ">Inloggen</button>  
                </div>
              </form>


            </div>
          </div>
        </div>
      </div>

    </div>


  </div>
  {% endblock %}

  {% block javascripts %}
  <!-- jQuery 2.0.2 -->
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
  <!-- Bootstrap -->
  <script src="{{ app.asset_path }}/js/bootstrap.min.js" type="text/javascript"></script>
  <!-- iCheck -->
  <script src="{{ app.asset_path }}/js/plugins/iCheck/icheck.min.js" type="text/javascript"></script>

  <script>
        // ADDITONAL INTIALIZING
        $('input').iCheck({
          checkboxClass: 'icheckbox_square',
          radioClass: 'iradio_square',
    increaseArea: '20%' // optional
  });

      </script>
      {% endblock %}